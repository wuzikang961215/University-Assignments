// Importing scanner class
import java.util.Scanner;

class Input {
    public static void main(String args[]){

        Scanner input = new Scanner(System.in);

        // Getting String input
        System.out.println("\n What is your name? ");
        String name = input.nextLine();
        
        // Getting integer input
        System.out.println("\n How old are you? ");
        int age = input.nextInt();
        
        
        System.out.println("\n What is your favorite food? ");
        String favoritefood = input.next();
        

        System.out.println("\n What is your grade in maths and English? Enter two numbers ");
        String grades = input.next() + " and " +  input.next();

        // Getting float input
        System.out.println("\n How tall are you? Enter in meters ");
        float height = input.nextFloat();
        

        System.out.println("\n How much do you weigh? Enter in kilograms ");
        float weight = input.nextFloat();
        

        System.out.println("\n How many subjects do you have? ");
        int number = input.nextInt();
        
        // Printing all the inputs out
        System.out.println("\n Your name is " + name + " and you are " + age + " years old. \n Your favorite food is " + favoritefood + ". \n Your grades in maths and English are "+ grades + ". \n You are "+ height + " meters tall and weigh "+ weight +" kilograms. \n You have "+number+ " subjects. ");
    }
}