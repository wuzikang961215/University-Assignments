public abstract class HandTool extends Tool{ // inherit from the Tool class
    protected boolean sharp; // variable that is true if the tool is sharp and false otherwise

    public HandTool(float weight, float value, boolean sharp){ // constructor
        super(weight, value); // call constructor in father class Tool
        this.sharp = sharp; // initialize sharp variable
    }

    public boolean isSharp(){ // returns the value of sharp
        return this.sharp;
    }
}